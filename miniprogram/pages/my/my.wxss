}
.zw_list{
  padding-top:20rpx;
}
.zw_item{
  border-bottom:1px solid #d6d6d6;
  padding:20rpx 0;
}
.zw_item.active{
  border-bottom:none;
}
.zw_item .result_name{
  display: block;
  font-size:28rpx;
  color: #3b444e;
  line-height:35rpx;
  margin:10rpx 0;
}
.zw_item  .result_detail{
  display:block;
  font-size:26rpx;
  color: #666666;
  line-height:49rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.my_item_wrap{
  width:640rpx;
  background: #fff;
  border-radius:15rpx;
  padding:35rpx;
  margin:22rpx auto;
}
.my_item{
  width:640rpx;
  display: flex;
  display:-webkit-flex;
  flex-direction:row;
  justify-content:space-between;
  padding:30rpx 0;
  border-bottom:1px solid #d6d6d6;
}
.my_item.last{
  border-bottom:none;
}
.my_item .my_item_left{
  width:50%;
  height:45rpx;
  line-height:45rpx;
  font-size:30rpx;
}
.my_item .my_item_left image{
  width:45rpx;
  height:45rpx;
  vertical-align: middle;
  margin-right:16rpx;
  margin-top:-10rpx;
}
.my_item  .my_item_right{
  width:50%;
  height:45rpx;
  text-align:right;
  line-height:45rpx;
  font-size:30rpx;
  color: #999999;
}
.my_item  .my_item_right image{
  width:15rpx;
  height:27rpx;
  vertical-align:middle;
  margin-left:10rpx;
}
.contacButton{
  padding:0;
  background: none;
  text-align: left;
}
.contacButton::after{
  border:none;
}