  width:640rpx;
  background: #fff;
  border-radius:15rpx;
  margin:22rpx auto 0;
  padding:35rpx;
}
.my_zws_top{
  height:45rpx;
  display:flex;
  display:-webkit-flex;
  flex-direction:row;
  justify-content: space-between;
}
.my_zws_top .zws_top_left{
  height:45rpx;
