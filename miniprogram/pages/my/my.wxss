/* pages/my/my.wxss */
page{
  background: #ededf1;
  padding-bottom:50rpx;
}
.banner_bk{
  width:750rpx;
  height:408rpx;
  position: absolute;
  left:0;
  top:0;
  z-index:-1;
}
.user_wrap{
  height:232rpx;
}
.user_wrap image.tx_pic{
  display: block;
  width:140rpx;
  height:140rpx;
  border-radius:50%;
  margin:0 auto;
}
.user_wrap view.username{
  color: #fff;
  text-align: center;
  line-height:40rpx;
  font-size:38rpx;
  padding-top:20rpx;
}

.my_books{
  width:640rpx;
  background: #fff;
  border-radius:15rpx;
  margin:22rpx auto 0;
  padding:35rpx;
}
.my_books_top{
  height:45rpx;
  display:flex;
  display:-webkit-flex;
  flex-direction:row;
  justify-content: space-between;
}
.my_books_top .books_top_left{
  height:45rpx;
  line-height:45rpx;
  font-size:30rpx;
}
.my_books_top .books_top_left image{
  width:45rpx;
  height:45rpx;
  vertical-align: middle;
  margin-right:16rpx;
  margin-top:-10rpx;
}
.books_top_right{
  width:30rpx;
  height:45rpx;
}
.books_top_right image{
  width:15rpx;
  height:27rpx;
  vertical-align:middle;
}
.my_scroll{
  width:640rpx;
  overflow: hidden;
  height:233rpx;
}
.hot_list{
  margin:0 auto;
  padding-top:30rpx;
  width: 100%; 
  white-space: nowrap;
}
.tip{
  height:30rpx;
  line-height:30rpx;
  font-size:26rpx;
  padding-left: 61rpx;
  padding-top:20rpx;
}
.hot_list .hot_item{
  display: inline-block;
  width:136rpx;
  margin-right:50rpx;
}
.hot_list .hot_item image{
  width:136rpx;
  height:159rpx;
  border-radius:10rpx;
}
.hot_list .hot_item text{
  display: block;
  line-height:50rpx;
  text-align: center;
  font-size:24rpx;
  color: #333;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}


