@import "./../../style/icon.wxss";
page{
  background: #ededf1;
  padding-bottom: 50rpx;
}
.banner_bk{
  width:750rpx;
  height:467rpx;
  position: absolute;
  left:0;
  top:0;
  z-index:-1;
}
.nav_top{
  width:100%;
  height:44rpx;
  display:flex;
  flex-direction:row;
  justify-content:flex-start;
  padding-top:60rpx;
  padding-bottom:30rpx;
}
.nav_top .nav_back{
  width:24rpx;
  height:44rpx;
  margin-left:24rpx;
}
.nav_top .nav_back image{
  display:block;
  width:24rpx;
  height:44rpx;
}
.nav_top  .nav_title{
  width:637rpx;
  height:44rpx;
  line-break:44rpx;
  font-size: 32rpx;
  font-weight:bold;
  text-align:center;
  color: #fff;
}
.container{
  width:750rpx;
  position:relative;
  z-index:1;
}
.nav_title image{
  width:645rpx;
  height:100rpx;
  display:block;
  margin:0 auto;
  padding-top:50rpx;
}
.nav_title .nav_title_con{
  height:36rpx;
  line-height:36rpx;
  text-align: center;
  width:200rpx;
  margin:0 auto;
  float:left;
  font-size:26rpx;
  color: #fff;
}
.nav_title .nav_title_con text{
  display:block;
  width:60rpx;
  height:8rpx;
  background: #fff;
  border-radius:4rpx;
  margin:25rpx auto 0;
  display:none;
}
.nav_title .nav_title_con.active{
  font-size:36rpx;
  font-weight:bold;
}
.nav_title .nav_title_con.active text{
  display: block;
}
.zw_them{
  text-align: center;
  font-size:22rpx;
  color: #fff;
  line-height:40rpx;
  padding-bottom:35rpx;
}
.select_wrap{
  width:640rpx;
  background: #fff;
  border-radius:15rpx;
  margin:0 auto;
  padding-top:60rpx;
  padding-bottom: 50rpx;
}
.offer_item{
  width:550rpx;
  height:90rpx;
  margin:0 auto 40rpx;
  position: relative;
  border-radius: 23rpx;
  background: #f5f3f3;
  line-height:90rpx;
}
.offer_item.offer_itemx{
  background: #f5f3f3;
  border-radius:20rpx;
  line-height: 90rpx;
  display:-webkit-flex;
  justify-content: flex-start;
  border:1px solid #fff;
}
.icon_title{
  display: inblock;
  font-size: 40rpx;
  padding-left: 20rpx;
  color: #a3a3a3;
  font-weight: bold;
}
.picker {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding: 0 20px 0 6px;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  font-size: 32rpx;
  height: 38rpx;
  line-height: 38rpx;
  text-indent: 70rpx;
  color: #a0a0a0;
}
.select_img {
  position: absolute;
  right: 46rpx;
  top: 50%;
  margin-top: -6rpx;
  width: 20rpx;
  height: 13rpx;
  transition: all .3s ease;
}
.offer_item.offer_itemx.active{
  border:1px solid #d32002;
  background-color: #fff;
}
.offer_item.offer_itemx.active .iconfont{
  color: #d32002;
}
.offer_item.offer_itemx.active input{
  color: #d32002;
}
.offer_item.offer_itemx .iconfont{
  display: block;
  font-size: 40rpx;
  padding-left:20rpx;
  color: #a3a3a3;
  font-weight: bold;
}
.offer_item.offer_itemx .zysearch{
  display:block;
  font-size: 40rpx;
  padding-left: 20rpx;
  color: #a3a3a3;
  width:490rpx;
  height:90rpx;
  line-height:90rpx;
  font-size:30rpx;
}
.phcolor{
  color: #a3a3a3;
  font-size:30rpx;
}
.tip_show{
  width:550rpx;
  margin:0 auto;
}
.tip_show .tip_title{
  line-height:38rpx;
  font-size:32rpx;
  color: #d32002;
  font-weight:bold;
}
.tip_show .tip_title .iconfont{
  margin-right:5rpx;
}
.tip_detail{
  text-indent:2em;
  font-size:24rpx;
  line-height:38rpx;
  margin-top:10rpx;
}
.tip_detail text{
  color: #d32002;
}
.result_error{
  width:640rpx;
  height:35rpx;
  margin:0 auto;
  line-height:35rpx;
  font-size:30rpx;
  text-align:center;
  color: #d32423;
  padding-top:40rpx;
}

.kc_img{
  width:100%;
  height: 622rpx;
  display: block;
  margin:20rpx auto;
  border-radius:10rpx;
}

.search_btn{
  width:560rpx;
  height:82rpx;
  padding:0;
  background: #d32002;
  line-height:82rpx;
  color: #fff;
  font-size:36rpx;
}
.tip_cvover{
  width:100%;
  position: fixed;
  bottom:20rpx;
  left: 0;
  border-radius:10rpx 10rpx 0 0;
  padding-top:1rpx;
}
.tip_cvover .tip_con{
  width:700rpx;
  height:92rpx;
  background: #d32423;
  margin:0 auto;
  border-radius:15rpx;
  display:flex;
  display: -webkit-flex;
  justify-content: flex-start;
}
.tip_cvover .tip_con .close_tip{
  width:39rpx;
  height:39rpx;
  padding:26.5rpx;
  margin-left:24rpx;
}
.tip_cvover .tip_con .tip_text{
  width:469rpx;
  height:92rpx;
  font-size:32rpx;
  color: #fff;
  text-align: center;
  line-height:92rpx;
}
.tip_cvover .tip_con .tip_icon{
  width:22rpx;
  height:38rpx;
  padding:26.5rpx;
}

.result_titles{
  width:640rpx;
  height:35rpx;
  margin:0 auto;
  line-height:35rpx;
  font-size:30rpx;
  text-align:left;
  color: #d32423;
  padding-top:40rpx;
} 
.result_titles .iconfont{
  margin-right:5px;
}
.load_image{
  width: 100%;
  height: 414rpx;
}
.result_list{
  padding-top:20rpx;
}
.result_item{
  width:560rpx;
  margin:0 auto;
  background: #fff;
  border-radius:15rpx;
  -moz-box-shadow:0rpx 0rpx 7rpx #d6d7d3;
  -webkit-box-shadow:0rpx 0rpx 7rpx #d6d7d3;
  box-shadow:0rpx 0rpx 7rpx #d6d7d3;
  margin-bottom:35rpx;
  padding:40rpx 40rpx 80rpx 40rpx;
  overflow:hidden;
  position: relative;
}

.result_code{
  display: block;
  font-size:24rpx;
  color: #3b444e;
  line-height:30rpx;
  padding-left:10rpx;
  padding:10rpx 0;
}
.result_detail{
  display:block;
  font-size:30rpx;
  color: #999999;
  line-height:40rpx;
  background: #f4f8f9;
  padding:10rpx;
  padding-left:10rpx;
  border-radius:10rpx;
  margin:20rpx 0 ;
}
.add_btn{
  width:196rpx;
  height:54rpx;
  background: #d32423;
  line-height:54rpx;
  position:absolute;
  left:50%;
  margin-left:-98rpx;
  bottom:20rpx;
  padding:0;
  text-align: center;
  color: #fff;
  border-radius:27rpx;
  font-size:29rpx;
}
.add_btn::after{
  border:none;
}