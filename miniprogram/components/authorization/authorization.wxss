/* components/ authorization/ authorization.wxss */
@import "./../icon.wxss";
.authorization_wrap{
  position: fixed;
  left:0;
  top:0;
  right:0;
  bottom:0;
  background: rgba(0,0,0,0.6);
  z-index: 222222;
}
.authorization_show{
  height:150rpx;
  background: #f9f6f9;
  width:100%;
  position: fixed;
  bottom:0;
  left:0;
  border-radius:15rpx 15rpx 0 0;
  padding-top:150rpx;
  z-index: 222223;
}
.authorization_show .phone_baocun{
  width:511rpx;
  height:80rpx;
  background: #c4100f;
  display:block;
  margin:0 auto;
  padding:0;
  color: #fff;
  line-height:80rpx;
  font-size: 30rpx;
}
.authorization_show .phone_baocun .iconfont{
  margin-right:10rpx;
}
.authorization_close{
  width:70rpx;
  height:70rpx;
  line-height:100rpx;
  text-align: center;
  position: absolute;
  right:30rpx;
  top:30rpx;
}
.authorization_close .iconfont{
  font-size:70rpx;
  color: #c4100f;
}
